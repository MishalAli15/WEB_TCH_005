<!-- Petitions -->
<div class="p-4">
    <% petitions.forEach(function(petition) { %>
        <div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl">
            <div class="md:flex">
                <div class="md:flex-shrink-0">
                    <img class="h-48 w-full object-cover md:h-full md:w-48" src="<%= petition.image %>"
                         alt="Success Story Image">
                </div>

                <div class="p-8">
                    <div class="uppercase tracking-wide text-sm text-indigo-500 font-semibold">Success Story</div>
                    <a href="#"
                       class="block mt-1 text-lg leading-tight font-medium text-black hover:underline"><%= petition.title %></a>
                    <p class="mt-2 text-gray-500"><%= petition.description %></p>
                    <div class="mt-4 flex items-center">
                        <img class="w-10 h-10 rounded-full mr-4" src="<%= petition.authorImage %>"
                             alt="Supporter Image">
                        <div class="text-sm text-gray-900 pr-4"><%= petition.author %></div>
                        <div class="text-sm text-gray-500 ml-auto">
                            <span class="font-bold"><%= petition.supporters %></span> supporters
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>
</div>


